 
 <view>
  <view class='search'>
    <image src='/images/search.png'></image>
    <input type="string" placeholder='你想吃点啥' focus bindinput="bindKeyInput" bindconfirm='goSearch' ></input>
    <text bindtap='goSearch'>搜索</text>
  </view>
  <view class='history'>
    <text class='title' >搜索历史</text>
    <text class='clear' wx:if='{{historyList.length}}' bindtap='bindClearHistory'>清空历史</text>
    <view>
      <text  wx:for='{{list}}' wx:key='{{item}}' bindtap='historyGoSearch' data-title="{{historyList}}">{{list}}</text>
    </view>
  </view>

    <view wx:if='{{!historyList.length}}' style='text-align:center;color:#666;font-size:24rpx;' >
      搜索历史为空
</view>



<view class="history">
  <view class="tuijian_title">热门搜索</view>
<text  class="tuijian" wx:for="{{tuijian}}"  wx:key="{{item}}" bindtap='goSearch'>{{item.name}}</text>
</view>
</view> 


 