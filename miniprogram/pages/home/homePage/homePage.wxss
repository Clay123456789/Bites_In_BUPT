{height:900rpx;

}

 .meishi{
   float: left;
   height:750px;
   width:auto; 
   flex: 1;
  }

.meishi_img{
  width: 100px;
}

.fimg{
  width: 100px;
 
}
.content{
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
  height: 600px;
  
 }
 .item{
  width: 200rpx;
  margin: 0 0 20rpx 0;
 }
 